<p class="pt-5">Calculer les dates clés de la TUP à partir de la date de publication désirée :</p>

<%= simple_form_for @tup, url: tups_path, 
  wrapper: :search_bar_form, 
  html: { class: 'd-flex flex-row' },
  remote: true do |f| %>

    <%= f.input :publication, as: :string, label: false, placeholder: "Date de publication : #{french_date(Date.today)}", input_html: {class: "datepicker"} %>
    
    <%= f.button :submit, "Go", class: "btn-primary flex-shrink-1" %>

<% end %>

