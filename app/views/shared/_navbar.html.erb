<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://www.davidbenrimon.com/files-wide/uploads/logo-placeholder@2x.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Nos sociétés", companies_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ajouter une société", new_company_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Créer une TUP', new_tup_path, class: 'nav-link', data: {target: '#createTupModal', toggle: 'modal'} %>
          <div class="modal fade" id="createTupModal">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Ajouter une TUP</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body d-flex justify-content-md-around">
                  <%= link_to "Depuis une date de publication", new_tup_path(d: :publication), class: 'btn btn-primary' %>
                  <%= link_to "Pour une date d'effet donnée", new_tup_path(d: :legal_effect), class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          </div>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQ9bM5cXrbv6p6jMiSoVtfs_4HDYJkE5DuNVQ&usqp=CAU", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, remote: true, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
