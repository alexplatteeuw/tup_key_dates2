<% if date == "publication" %>
  <p>Calculer les dates clés de la TUP à partir de la date de publication désirée :</p>
<% elsif date == "legal_effect" %>
  <p>Calculer les dates clés de la TUP à partir de la date d'effet désirée :</p>
<% end %>

<%= simple_form_for @tup, url: tups_path, 
  # wrapper: :search_bar_form,
  html: { id: "publication-datepicker" },
  remote: true,
  authenticity_token: true do |f| %>

    <%= f.error_notification %>

    <%= f.input date, as: :string, label: false, input_html: {class: "datepicker" } %>

    <%= f.input :companies, label: 'Société Absorbante', collection: @companies, input_html: { multiple: true }  %>

    <%= f.input :companies, label: 'Société Absorbée', collection: @companies, input_html: { multiple: true } %>
    
    <%= f.button :submit, "Go", class: "btn-primary" %>

<% end %>
